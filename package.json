{
  "name": "quilt",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "repository": "https://github.com/lemonmade/quilt.git",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "test": "node ./scripts/sewing-kit-internal test",
    "lint": "node ./scripts/sewing-kit-internal lint",
    "type-check": "node ./scripts/sewing-kit-internal type-check",
    "build": "node ./scripts/sewing-kit-internal build",
    "prerelease": "yarn build",
    "g": "npx -p @babel/core -p @babel/node babel-node --extensions .ts,.tsx,.mjs,.js --presets @babel/preset-typescript,@babel/preset-env ./scripts/generate.ts",
    "version-bump": "lerna version",
    "deploy": "lerna publish from-package --yes --no-verify-access",
    "sewing-kit": "node scripts/sewing-kit.js"
  },
  "devDependencies": {
    "@quilted/craft": "^0.0.0",
    "lerna": "3.22.1",
    "p-limit": "^3.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "terser": "^5.5.1",
    "typescript": "^4.1.0"
  }
}
